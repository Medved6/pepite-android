<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergewsevolojsky.pepiteapp.fragments.EmptyHomeFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/illu_home"
        android:layout_marginTop="30dp"/>

    
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rien de prévu ce soir ?"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"
            android:textColor="#555555"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:text="Aucun problème ! Créez un évènement pour trouver la pépite qui vous accompagnera ;)"/>

    </LinearLayout>
    




</RelativeLayout>
