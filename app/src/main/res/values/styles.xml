<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="redButton">
        <item name="android:background">@drawable/redbutton</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>



    <style name="whiteBorderButton">
        <item name="android:background">@drawable/whiteborderbutton</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="transparenButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="editText">
        <item name="android:background">@drawable/inputedit</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
    </style>


    <style name="titleTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="introTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>


</resources>
